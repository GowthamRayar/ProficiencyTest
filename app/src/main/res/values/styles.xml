<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Defining new theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary_v2</item>
        <item name="colorPrimaryDark">@color/app_primary_dark_v2</item>
        <item name="colorAccent">@color/app_accent_v2</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabTextStyle</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="27">true</item>
    </style>



    <style name="MyTabTextStyle" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
